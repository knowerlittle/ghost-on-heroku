<header class="site-header">
    <div class="logo-wrap">
        {{#if @site.logo}}
            <a class="image-logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>
        {{else}}
            <a class="text-logo" href="{{@site.url}}">{{@site.title}}</a>
        {{/if}}
        {{#if @site.description}}
            <div class="site-description">{{@site.description}}</div>
        {{/if}}
    </div>
    <nav class="site-nav">
        <ul>
        {{navigation}}
        </ul>
    </nav>
    <span class="menu-button" id="menu-open">{{> icons/menu}}</span>
    <div class="header-bottom text-center">
        <div class="search-btn-wrap">
            <span class="search-btn search-open">{{> icons/search}}{{t "Search"}}</span>
        </div>
        {{> social-links}}
    </div>
    <nav class="mobile-menu" id="mobile-menu">
        <ul>{{navigation}}</ul>
        <div class="mobile-header-bottom text-center">
            <div class="search-btn-wrap">
                <span class="search-btn search-open">{{> icons/search}}{{t "Search"}}</span>
            </div>
            {{> social-links}}
        </div>
    </nav>
    <div class="backdrop" id="backdrop">
        <span class="menu-close align-center">{{> icons/close}}</span>
    </div>
</header>